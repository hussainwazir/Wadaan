<body>

    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>

    <div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
         data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">

                        <div class="ms-auto text-end">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/PROJECTMANAGERAREA/ProjectManager/Dashboard"> Dashboard </a></li>
                                    <li class="breadcrumb-item active" aria-current="page"> Contractor </li>
                                    <li class="breadcrumb-item active" aria-current="page"> Save</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="card">

                    <div class="card-header"><h5>CONTRACTOR</h5>  </div>
                    <div class="card-body border">

                        <form class="md-float-material" id="frmAddUpdateContractor" name="frmAddUpdateContractor" action="/services/Xtreme/multipart" method="post">
                            <input type="hidden" name="UserID" id="UserID" value="00000000-0000-0000-0000-000000000000">
                            <input type="hidden" name="ContractorID" id="ContractorID" value="00000000-0000-0000-0000-000000000000">
                            <input type="hidden" name="Id" id="Id" value="0">
                            <input type="hidden" name="type" id="type" value="Contractor_Save">

                            @* ===================== Row First 1 =========================*@

                            <div class="card">
                                <div class="card-header"><h5>Personal Information</h5>  </div>
                                <div class="card-body border">

                                    <div class="row">

                                        <div class="col-sm-3">
                                            <div>
                                                <label class="form-control-label">Contractor Name: </label><span style="color:red">*</span><br />
                                                <input type="text" class="form-control pname" name="ContractorName" id="ContractorName" value="" required>
                                            </div>
                                        </div>

                                        <div class="col-sm-3">
                                            <div>
                                                <label class="form-control-label"> WhatsApp: </label><br />
                                                <input type="text" class="form-control pname" name="ConWhatsApp" id="ConWhatsApp" value="" required>
                                            </div>
                                        </div>

                                        <div class="col-sm-3">
                                            <div>
                                                <label class="form-control-label"> Email: </label> <span style="color:red">*</span><br />
                                                <input type="email" class="form-control pname" name="ConEmail" id="ConEmail" value="" required>
                                            </div>
                                        </div>




                                        <div class="col-sm-3">
                                            <div>
                                                <label class="form-control-label"> PhoneNo: </label> <span style="color:red">*</span> <br />
                                                <input type="text" class="form-control pname" name="PhoneNo" id="PhoneNo" value="" required>
                                            </div>
                                        </div>
                                    </div>
                                    <br />

                                    <div class="row">





                                        <div class="col-sm-3">
                                            <div>
                                                <label class="form-control-label">House No: </label><br />
                                                <input type="text" class="form-control pname" name="HouseNo" id="HouseNo" value="" required>
                                            </div>
                                        </div>

                                        <div class="col-sm-3">
                                            <div>
                                                <label class="form-control-label">Street No: </label><br />
                                                <input type="text" class="form-control pname" name="StreetNo" id="StreetNo" value="" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div>
                                                <label class="form-control-label">Town/Sector: </label><br />
                                                <input type="text" class="form-control pname" name="TownSector" id="TownSector" value="" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div>
                                                <label class="form-control-label">City: </label> <span style="color: red">*</span><br />
                                                <select class="form-control select2" id="CityID" name="CityID"></select>
                                            </div>
                                        </div>


                                    </div>
                                    <br />
                                    <div class="row">



                                        <div class="col-sm-3">
                                            <div>
                                                <label class="form-control-label">Province:<span style="color:red">*</span></label><br />
                                                <select class="form-control select2" id="ProvinceID" name="ProvinceID"></select>
                                            </div>
                                        </div>

                                        <div class="col-sm-3">
                                            <div>
                                                <label class="form-control-label">Contractor Photo:</label>
                                                <input type="file" class="form-control pname" name="ProfilePicture" id="ProfilePicture" value="">
                                            </div>
                                        </div>

                                    </div>
                                    <br />
                                </div>
                            </div>

                        </form>
                        <br /><br />
                        <div class="border-top">

                            <div class="modal-footer">
                                <button type="button" id="btnSave" class="btn btn-success text-white   waves-effect  f-w-600 d-inline-block save_btn"> Save</button>
                                <button type="reset" id="btnReset" class="btn btn-danger text-white   waves-effect  f-w-600 d-inline-block reset_btn"> Reset</button>
                                @*<button type="reset" class="btn btn-danger text-white">Reset</button>*@

                            </div>
                        </div>


                    </div>
                </div>
            </div>




        </div>
        <!-- ============================================================== -->
        <!-- End Page wrapper  -->
        <!-- ============================================================== -->
    </div>

