        </div>
    </div>

    <div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
         data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">

                        <div class="ms-auto text-end">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/PROJECTMANAGERAREA/ProjectManager/Dashboard"> Dashboard </a></li>
                                    <li class="breadcrumb-item active" aria-current="page"> Meeting </li>
                                    <li class="breadcrumb-item active" aria-current="page"> Save</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="card">

                    <div class="card-header"><h5>MEETING</h5>  </div>
                    <div class="card-body">

                        <form class="md-float-material" id="frmAddUpdateMeeting" name="frmAddUpdateMeeting" action="/services/Xtreme/multipart" method="post">
                            <input type="hidden" name="UserID" id="UserID" value="00000000-0000-0000-0000-000000000000">
                            <input type="hidden" name="MeetingID" id="MeetingID" value="00000000-0000-0000-0000-000000000000">
                            <input type="hidden" name="Id" id="Id" value="0">
                            <input type="hidden" name="type" id="type" value="MeetingsWithClient_Save">
                            <div class="row">
                                <div class="col-sm-3">
                                    <div>
                                        <label class="form-control-label">Meeting Name:</label> <span style="color: red">*</span>
                                        <input type="text" class="form-control pname" name="MeetingName" id="MeetingName" required value="">

                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div>
                                        <label class="form-control-label">Project:</label>
                                        <select class="form-control select2" id="ProjectID" name="ProjectID" onchange="loadClientDDl()" required ></select>

                                    </div>
                                </div>


                                <div class="col-sm-3">
                                    <div>
                                        <label class="form-control-label">Client:</label>
                                        <select class="form-control select2" id="ClientID" name="ClientID"></select>

                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div>
                                        <label class="form-control-label">Employee:</label>
                                        <select class="form-control select2" id="EmployeeID" name="EmployeeID"></select>

                                    </div>
                                </div>

                            </div>

                            <br />
                            <div class="row">
                                <div class="col-sm-3">
                                    <div>
                                        <label class="form-control-label">Meeting Date:</label><br />
                                        <input type="text" class="form-control pname" name="MeetingDate" id="MeetingDate" value="" required="">

                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-sm-12">
                                    <div>
                                        <label class="form-control-label">Meeting Discussion:<span style="color:red">*</span></label><br />
                                        <textarea type="text" class="form-control pname editor" name="MeetingDiscussion" id="MeetingDiscussion" value="" required=""></textarea>
                                        @*<input type="text" class="form-control pname" name="MeetingDiscussion" id="MeetingDiscussion" value="" required="">*@
                                    </div>
                                </div>

                            </div>

                        </form>

                        <div class="border-top">

                            <div class="modal-footer">
                                <button type="button" id="btnSave" class="btn btn-success text-white   waves-effect  f-w-600 d-inline-block save_btn"> Save</button>
                                <button type="reset" id="btnReset" class="btn btn-danger text-white   waves-effect  f-w-600 d-inline-block reset_btn"> Reset</button>
                                @*<button type="reset" class="btn btn-danger text-white">Reset</button>*@

                            </div>
                        </div>


                    </div>
                </div>
            </div>




        </div>
        <!-- ============================================================== -->
        <!-- End Page wrapper  -->
        <!-- ============================================================== -->
    </div>

