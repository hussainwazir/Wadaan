@*<div class="modal fade" id="profile-update-modal" tabindex="-1" role="dialog">*@

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">


    <div class="modal-dialog modal-lg" role="document">


        <div class="modal-content">

            <div class="modal-body">

                <div class="card">
                    <div class="card-header"><h5>Check List Information</h5>  </div>
                    <div class="card-body border">

                        <form class="md-float-material" id="frmAddUpdateChecklist" name="frmAddUpdateChecklist" action="/services/Xtreme/multipart" method="post">
                            <input type="hidden" name="UserID" id="UserID" value="00000000-0000-0000-0000-000000000000">
                            <input type="hidden" name="CheckListID" id="CheckListID" value="00000000-0000-0000-0000-000000000000">
                            <input type="hidden" name="Id" id="Id" value="0">
                            <input type="hidden" name="type" id="type" value="CheckList_Save">

                            @* ===================== Row First 1 =========================*@


                            <div class="card">

                                <div class="card-body">


                                    <div class="row">

                                        <div class="col-sm-4">
                                            <div>
                                                <label class="form-control-label ">Task: </label><span style="color:red">*</span><br />
                                                <select type="text" class="form-control pname @*select2*@  col-lg-8" name="TaskName" id="TaskName" value="" style="width: 250px" @*onchange="taskStatus(this)" *@>
                                                    <option value="0"> Select Task</option>
                                                    <option value="Concept Design"> Concept Design</option>
                                                    <option value="Sketch"> Sketch </option>
                                                    <option value="3D Modeling"> 3D Modeling </option>
                                                    <option value="Submission Drawing"> Submission Drawing </option>
                                                    <option value="Architecture"> Architecture </option>
                                                    <option value="Structural Drawing"> Structural Drawing </option>
                                                    <option value="Electrical"> Electrical </option>
                                                    <option value="Plumbing"> Plumbing </option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-sm-4">
                                            <div>
                                                <label class="form-control-label"> Status: </label><span style="color:red">*</span><br />
                                                <select type="text" class="form-control pname  col-lg-8" name="ChecklistType" id="ChecklistType" value="" style="width: 250px">
                                                    <option value="1"> Select Type</option>
                                                   
                                                    <option value="Submitter"> Submitter</option>
                                                    <option value="Checker">Checker</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div>
                                                <label class="form-control-label"> Status: </label><span style="color:red">*</span><br />
                                                <select type="text" class="form-control pname  col-lg-8" name="TaskStatus" id="TaskStatus" value="" style="width: 250px">
                                                    <option value="1"> Select Status</option>
                                                    @*
                                                    <option value="Not Started Yet"> Not Started Yet</option>*@
                                                    @*
                                                    <option value="Inprogress"> Inprogress </option>*@
                                                    <option value="Completed"> Completed </option>
                                                    <option value="Rejected"> Rejectd </option>
                                                    @*
                                                    <option value="Paused"> Paused </option>
                                                    <option value="Overdue"> Overdue </option>*@
                                                </select>
                                            </div>
                                        </div>

                                    </div>
                                    <br />

                                    <div class="row">

                                        <label class="form-control-label">Description</label>
                                        <textarea rows="5" cols="50" name="Description" id="Description" required></textarea>

                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" id="btnSave" class="btn btn-su ccess text-white   waves-effect  f-w-600 d-inline-block save_btn" style="background: green;"> Save</button>
                <button type="reset" id="btnReset" class="btn btn-danger text-white   waves-effect  f-w-600 d-inline-block reset_btn"> Reset</button>
                <button type="reset" id="btnClose" class="btn btn-danger text-white   waves-effect  f-w-600 d-inline-block reset_btn"> Close</button>

                @*<button type="reset" class="btn btn-danger text-white">Reset</button>*@

            </div>
        </div>
