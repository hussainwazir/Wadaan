

@{
    ViewBag.Title = WadaanSystemManager.Resources.LangText.TransactionAddUpdateDelete;
    Layout = "~/Views/Shared/_Layout_Customer.cshtml";
}

<style>

    label {
        margin-top: .5rem;
    }
    .error {
        border: 1px solid red;
    }


</style>
<!-- Page header start -->
<div class="page-header">
    <div class="page-header-title">
        @*<h4>Agent List</h4>*@
    </div>
    <div class="page-header-breadcrumb">
        <ul class="breadcrumb-title">
            <li class="breadcrumb-item">
                <a href="index-2.html">
                    <i class="icofont icofont-home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="#!">@WadaanSystemManager.Resources.LangText.TransactionModule</a>
            </li>
            <li class="breadcrumb-item">
                <a href="#!">@WadaanSystemManager.Resources.LangText.TransactionList</a>
            </li>
        </ul>
    </div>
</div>
<div class="page-body">

    <!-- Page-body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <!-- HTML (DOM) Sourced Data table start -->
                <div class="card">
                    <div class="card-header">
                        <button type="button" id="btn-add-update-Transaction" class="btn btn-primary waves-effect waves-light f-right d-inline-block md-trigger" data-modal="modal-add-update-Transaction"><i class="icofont icofont-plus m-r-5"></i>  @WadaanSystemManager.Resources.LangText.TransactionRecord </button>
                        <h5> @WadaanSystemManager.Resources.LangText.TransactionS</h5>
                        <span> @WadaanSystemManager.Resources.LangText.AllTransactionrecordlist</span>

                    </div>
                    <div class="card-block">
                        <div class="dt-responsive table-responsive">

                            <div id="grid-agent"></div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Page-body end -->
 

    <div class="md-modal" id="modal-add-update-Transaction" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"> @WadaanSystemManager.Resources.LangText.AddTransactionRecord</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body p-b-0">
                    <form class="md-float-material" id="frmAddTransaction" name="frmAddTransaction" action="/services/Xtreme/multipart" method="post">

                        <input type="hidden" name="TransactionID" id="TransactionID" value="00000000-0000-0000-0000-000000000000" />

                        <input type="hidden" name="type" id="type" value="addTransaction" />
                        <input type="hidden" name="TransactionType" id="TransactionType" value="TransactionType" />
                        <input type="hidden" name="UserID" id="UserID" value="" />
                        <input type="hidden" name="CustomerID" id="CustomerID" value="" />
                        <div class="row">
                            <div class="col-sm-6">
                                <div>
                                    <label class="form-control-label">@WadaanSystemManager.Resources.LangText.CustomerName:</label>
                                    <select id="ddlCustomerName" class="form-control" tabindex="-1"></select>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div>
                                    <label class="form-control-label"> @WadaanSystemManager.Resources.LangText.TransactionType:</label>
                                    <select id="ddlTransactionType" class="form-control" tabindex="-1">
                                        <option value="AD1DC7FD-85EC-446F-AC6F-850668C0B571">Debit (+)</option>
                                        <option value="E9FC85F1-3EAC-4B03-8015-4DD8B21A3D31">Credit (-)</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div>
                                    <label class="form-control-label"> @WadaanSystemManager.Resources.LangText.DatePaid:</label>
                                    <input type="date" class="form-control pname" name="paiddate" id="paiddate" required placeholder="@WadaanSystemManager.Resources.LangText.DatePaid" value="">

                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div>
                                    <label class="form-control-label"> @WadaanSystemManager.Resources.LangText.Amount:</label>
                                    <input type="number" class="form-control pname" name="AmountPaid" id="AmountPaid" required placeholder=" @WadaanSystemManager.Resources.LangText.Amount" value="">

                                </div>
                            </div>
                        </div>

                        <div class="row uploadimage">
                            <div class="col-md-12 col-sm-12">
                                <div>
                                    <label class="form-control-label"> @WadaanSystemManager.Resources.LangText.Upload:</label>
                                    <input type="hidden" class="form-control pname" name="StoreUrl" id="StoreUrl" required placeholder="Store Website Url" value="">
                                    <input type="file" name="ImageID" id="filer_input_single"  >

                                </div>
                            </div>
                        </div>

                        <!-- start Description -->
                        <div class="row">

                            <div class="col-md-12 col-sm-12">


                                <span class="j-label"> @WadaanSystemManager.Resources.LangText.Remarks:</span>

                                <div class="input-group">
                                    <textarea rows="5" name="Reason" id="Reason" cols="5" required="" class="form-control" placeholder=""></textarea>


                                </div>
                            </div>

                        </div>


                        <div class="j-response"></div>

                        <div class="j-footer">

                            <div class="row">

                                <div class="col-md-12 left">
                                    <div class="text-center">


                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end /.footer -->
                    </form>

                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-primary">Sign In</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>*@


                    <button type="button" id="btnSave" class="btn btn-primary waves-effect m-r-20 f-w-600 d-inline-block save_btn"><i class="fa fa-save"></i> @WadaanSystemManager.Resources.LangText.Save</button>
                    <button type="reset" class="btn btn-danger waves-effect m-r-20 f-w-600 d-inline-block reset_btn"><i class="fa fa-remove"></i>  @WadaanSystemManager.Resources.LangText.Reset</button>
                    <button type="button" class="btn btn-danger waves-effect m-r-20 f-w-600 md-close d-inline-block btn_close"><i class="fa fa-power-off"></i>  @WadaanSystemManager.Resources.LangText.Close</button>
                </div>
            </div>
        </div>
    </div>














    <div class="md-overlay"></div>
    <!-- Add/Update  Ends Model end-->
</div>
  <script src="~/Scripts/FunctionalityJs/Store/Transaction.js"></script>
