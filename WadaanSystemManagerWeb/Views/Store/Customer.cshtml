

@{
    ViewBag.Title = "Customer Add | Update | Delete";
    Layout = "~/Views/Shared/_Layout_Customer.cshtml";
}

<style>

    label {
        margin-top: .5rem;
    }
    .error {
        border: 1px solid red;
    }
    .viewbutton {
        font-size: 14px;
        color: #0069ff !important;
        cursor: pointer;
        text-decoration: underline !important;
    }
</style>
<!-- Page header start -->
<div class="page-header">
    <div class="page-header-title">
        @*<h4>Agent List</h4>*@
    </div>
    <div class="page-header-breadcrumb">
        <ul class="breadcrumb-title">
            <li class="breadcrumb-item">
                <a href="index-2.html">
                    <i class="icofont icofont-home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="#!">@WadaanSystemManager.Resources.LangText.CustomerModule</a>
            </li>
            <li class="breadcrumb-item">
                <a href="#!">@WadaanSystemManager.Resources.LangText.CustomerList</a>
            </li>
        </ul>
    </div>
</div>
<div class="page-body">

    <!-- Page-body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <!-- HTML (DOM) Sourced Data table start -->
                <div class="card">
                    <div class="card-header">
                        <button type="button" id="btn-add-update-customer" class="btn btn-primary waves-effect waves-light f-right d-inline-block md-trigger"><i class="icofont icofont-plus m-r-5"></i>Add Customer </button>
                        @*<button type="button" id="btn-add-update-Customer" class="btn btn-primary waves-effect waves-light f-right d-inline-block md-trigger" data-modal="modal-add-update-Customer"><i class="icofont icofont-plus m-r-5"></i> @WadaanSystemManager.Resources.LangText.CustomerRecord </button>*@
                        <h5>@WadaanSystemManager.Resources.LangText.CUSTOMERS</h5>
                        <span>@WadaanSystemManager.Resources.LangText.AllCustomersrecordlist</span>

                    </div>
                    <div class="card-block">
                        <div class="dt-responsive table-responsive">

                            <div id="grid-Customer"></div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Page-body end -->
 

    <div class="md-modal" id="modal-add-update-Customer" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@WadaanSystemManager.Resources.LangText.AddCustomerRecord</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body p-b-0">
                    <form class="md-float-material" id="frmAddCustomer" name="frmAddCustomer" action="/services/Xtreme/multipart" method="post">

                        <input type="hidden" name="CustomerID" id="CustomerID" value="00000000-0000-0000-0000-000000000000" />

                        <input type="hidden" name="type" id="type" value="addcustomer" />

                        <input type="hidden" name="UserID" id="UserID" value="" />


                        <div class="row">
                            <div class="col-sm-12">
                                <div>
                                    <label class="form-control-label">@WadaanSystemManager.Resources.LangText.CustomerName:</label>
                                    <input type="text" class="form-control pname" name="CustomerName" id="CustomerName" required placeholder="Customere Name" value="">

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div>
                                    <label class="form-control-label">@WadaanSystemManager.Resources.LangText.MobileNo:</label>
                                    <input type="text" class="form-control pname" name="CustomerMobileNo" id="CustomerMobileNo" required placeholder="Customer MobileNo" value="">

                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div>
                                    <label class="form-control-label">@WadaanSystemManager.Resources.LangText.EmailAddress:</label>
                                    <input type="text" class="form-control pname" name="CustomerEmail" id="CustomerEmail" required placeholder="Customer Email" value="">

                                </div>
                            </div>
                        </div> 
                        <!-- start Description -->
                        <div class="row">

                            <div class="col-md-12 col-sm-12">


                                <span class="j-label">@WadaanSystemManager.Resources.LangText.Address:</span>

                                <div class="input-group">
                                    <textarea rows="5" name="CustomerAddress" id="CustomerAddress" cols="5" required="" class="form-control" placeholder=""></textarea>


                                </div>
                            </div>

                        </div>
                     

                        <div class="j-response"></div>

                        <div class="j-footer">

                            <div class="row">

                                <div class="col-md-12 left">
                                    <div class="text-center">


                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end /.footer -->
                    </form>

                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-primary">Sign In</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>*@


                    <button type="button" id="btnSave" class="btn btn-primary waves-effect m-r-20 f-w-600 d-inline-block save_btn"><i class="fa fa-save"></i> @WadaanSystemManager.Resources.LangText.Save</button>
                    <button type="reset" class="btn btn-danger waves-effect m-r-20 f-w-600 d-inline-block reset_btn"><i class="fa fa-remove"></i> @WadaanSystemManager.Resources.LangText.Reset</button>
                    <button type="button" class="btn btn-danger waves-effect m-r-20 f-w-600 md-close d-inline-block btn_close"><i class="fa fa-power-off"></i> @WadaanSystemManager.Resources.LangText.Close</button>
                </div>
            </div>
        </div>
    </div>














    <div class="md-overlay"></div>
    <!-- Add/Update  Ends Model end-->
</div>
  <script src="~/Scripts/FunctionalityJs/Store/Customer.js"></script>
