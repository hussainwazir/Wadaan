

@{
    ViewBag.Title = "Store";
    Layout = "~/Views/Shared/_Layout_Customer.cshtml";
}

<style>

    label {
        margin-top: .5rem;
    }
    .error {
        border: 1px solid red;
    }


</style>
<!-- Page header start -->
<div class="page-header">
    <div class="page-header-title">
        @*<h4>Agent List</h4>*@
    </div>
    <div class="page-header-breadcrumb">
        <ul class="breadcrumb-title">
            <li class="breadcrumb-item">
                <a href="index-2.html">
                    <i class="icofont icofont-home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="#!">Store Module</a>
            </li>
            <li class="breadcrumb-item">
                <a href="#!">Store List</a>
            </li>
        </ul>
    </div>
</div>
<div class="page-body">

    <!-- Page-body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <!-- HTML (DOM) Sourced Data table start -->
                <div class="card">
                    <div class="card-header">
                        <button type="button" id="btn-add-update-store" class="btn btn-primary waves-effect waves-light f-right d-inline-block md-trigger" data-modal="modal-add-update-agent"><i class="icofont icofont-plus m-r-5"></i> Store Record </button>
                        <h5>Store(S)</h5>
                        <span>All Store(s) record list..</span>

                    </div>
                    <div class="card-block">
                        <div class="dt-responsive table-responsive">

                            <div id="grid-agent"></div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Page-body end -->
 

    <div class="md-modal" id="modal-add-update-agent" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Store Record</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body p-b-0">
                    <form class="md-float-material" id="frmAddStore" name="frmAddStore" action="/services/Xtreme/multipart" method="post">

                        <input type="hidden" name="StoreID" id="StoreID" value="00000000-0000-0000-0000-000000000000" />

                        <input type="hidden" name="type" id="type" value="addStore" />
                         
                        <input type="hidden" name="UserID" id="UserID" value="" />


                        <div class="row">
                            <div class="col-sm-12">
                                <div>
                                    <label class="form-control-label">Store Name:</label>
                                    <input type="text" class="form-control pname" name="StoreName" id="StoreName" required placeholder="Store Name" value="">

                                </div>
                            </div>
                        </div>
                        
                        <div class="row uploadimage" >
                            <div class="col-sm-12">
                                <div>
                                    <label class="form-control-label">Image Upload:</label>
                                    <input type="hidden" class="form-control pname" name="StoreUrl" id="StoreUrl" required placeholder="Store Website Url" value="">
                                    <input type="file" name="ImageID" id="filer_input_single">

                                </div>
                            </div>
                        </div>


                    

                        <!-- start Description -->
                        <div class="row">

                            <div class="col-md-12 col-sm-12">


                                <span class="j-label">Store Description:</span>

                                <div class="input-group">
                                    <textarea rows="5" name="StoreDescription" id="StoreDescription" cols="5" required="" class="form-control" placeholder=""></textarea>


                                </div>
                            </div>

                        </div>
                        <div class="row">

                            <div class="col-md-12 col-sm-12">


                                <span class="j-label">Store Address:</span>

                                <div class="input-group">
                                    <textarea rows="5" name="StoreAddress" id="StoreAddress" cols="5" required="" class="form-control" placeholder=""></textarea>


                                </div>
                            </div>

                        </div>
                        
                        <div class="j-response"></div>
                       
                        <div class="j-footer">

                            <div class="row">

                                <div class="col-md-12 left">
                                    <div class="text-center">


                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end /.footer -->
                    </form>

                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-primary">Sign In</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>*@


                    <button type="button" id="btnSave" class="btn btn-primary waves-effect m-r-20 f-w-600 d-inline-block save_btn"><i class="fa fa-save"></i> Save</button>
                    <button type="reset" class="btn btn-danger waves-effect m-r-20 f-w-600 d-inline-block reset_btn"><i class="fa fa-remove"></i> Reset</button>
                    <button type="button" class="btn btn-danger waves-effect m-r-20 f-w-600 md-close d-inline-block btn_close"><i class="fa fa-power-off"></i> Close</button>
                </div>
            </div>
        </div>
    </div>














    <div class="md-overlay"></div>
    <!-- Add/Update  Ends Model end-->
</div>

                <script src="~/Scripts/FunctionalityJs/Store/Store.js"></script>
